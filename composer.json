{
    "name": "yiipress/engine",
    "type": "project",
    "description": "YiiPress - a static site generator based on Yii3",
    "keywords": [
        "yii3",
        "app",
        "static",
        "site",
        "generator"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiipress/engine/issues?state=open",
        "source": "https://github.com/yiipress/engine",
        "chat": "https://t.me/yii3en"
    },
    "funding": [
        {
            "type": "opencollective",
            "url": "https://opencollective.com/yiisoft"
        },
        {
            "type": "github",
            "url": "https://github.com/sponsors/yiisoft"
        }
    ],
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@php ./yii serve"
        ],
        "test": "phpunit"
    },
    "require": {
        "php": "^8.5",
        "ext-ffi": "*",
        "ext-filter": "*",
        "ext-md4c": "*",
        "ext-pcntl": "*",
        "ext-mbstring": "*",
        "ext-xmlwriter": "*",
        "ext-yaml": "*",
        "httpsoft/http-message": "^1.1.6",
        "psr/container": "^2.0.2",
        "psr/http-factory": "^1.1",
        "psr/http-message": "^2.0",
        "psr/http-server-handler": "^1.0.2",
        "psr/http-server-middleware": "^1.0.2",
        "psr/log": "^3.0.2",
        "samdark/sitemap": "^2.4.1",
        "symfony/console": "^7.4.4",
        "yiisoft/config": "^1.6.2",
        "yiisoft/definitions": "^3.4.1",
        "yiisoft/di": "^1.4.1",
        "yiisoft/error-handler": "^4.3.2",
        "yiisoft/http": "^1.3",
        "yiisoft/log": "^2.2.0",
        "yiisoft/middleware-dispatcher": "^5.4",
        "yiisoft/router": "^4.0.2",
        "yiisoft/router-fastroute": "^4.0.3",
        "yiisoft/yii-console": "^2.4.2",
        "yiisoft/yii-http": "^1.1.1",
        "yiisoft/yii-runner-console": "^2.2.1",
        "yiisoft/yii-runner-http": "^3.2.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94.0",
        "phpbench/phpbench": "^1.4.3",
        "phpunit/phpunit": "^12.5.12",
        "rector/rector": "^2.3.6",
        "roave/infection-static-analysis-plugin": "^1.43",
        "shipmonk/composer-dependency-analyser": "^1.8.4",
        "vimeo/psalm": "^6.15.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-file": "config/configuration.php"
    },
    "config": {
        "sort-packages": true,
        "bump-after-update": true,
        "allow-plugins": {
            "yiisoft/config": true,
            "infection/extension-installer": true,
            "composer/installers": true
        }
    }
}
